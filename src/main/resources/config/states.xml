<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <!-- the states are picked up from the state enums themselves, not injected  -->


    <bean id="GameState.NULL" class="net.wohlfart.basic.states.NullState" />

    <bean id="GameState.SIMPLE" class="net.wohlfart.basic.states.SimpleState">
        <property name="camera" ref="camera" />
        <property name="skybox" ref="defaultSkybox" />
        <property name="elemBucket" ref="elemBucket" />
        <property name="hud" ref="defaultHud" />
    </bean>

    <bean id="GameState.LIGHTING" class="net.wohlfart.basic.states.LightingState" >
        <property name="camera" ref="camera" />
        <property name="skybox" ref="defaultSkybox" />
        <property name="modelBucket" ref="modelBucket" />
<!--         <property name="modelBucket" ref="emptyModelBucket" /> -->
<!--         <property name="elemBucket" ref="emptyBucket" /> -->
        <property name="elemBucket" ref="elemBucket" />
        <property name="hud" ref="defaultHud" />

    </bean>


    <!-- huds -->

    <bean id="defaultHud" class="net.wohlfart.gl.elements.hud.HudImpl">
        <property name="graphicContext" ref="hudShader" />
    </bean>



    <!-- skyboxes -->

    <bean id="defaultSkybox" class="net.wohlfart.gl.elements.skybox.SkyboxImpl">
        <property name="camera" ref="camera" />
        <property name="graphicContext" ref="defaultShader" />
    </bean>




    <!-- content -->



    <bean id="emptyModelBucket" class="net.wohlfart.gl.renderer.ModelBucket">
        <property name="camera" ref="camera" />
        <property name="graphicContext" ref="lightingShader" />
    </bean>


    <bean id="invadorsBucket" class="net.wohlfart.gl.renderer.InvadorsBucket">
        <property name="camera" ref="camera" />
        <property name="graphicContext" ref="lightingShader" />
    </bean>


    <bean id="modelBucket" class="net.wohlfart.gl.renderer.ModelBucket">
        <property name="camera" ref="camera" />
        <property name="graphicContext" ref="lightingShader" />
        <property name="content">
           <list>
              <ref bean="ship01" />
              <ref bean="ship02" />
           </list>
        </property>
    </bean>


    <bean id="emptyBucket" class="net.wohlfart.gl.renderer.RenderBucketImpl">
        <property name="camera" ref="camera" />
        <property name="graphicContext" ref="wireframeShader" />
    </bean>

    <bean id="elemBucket" class="net.wohlfart.gl.renderer.RenderBucketImpl">
        <property name="camera" ref="camera" />
        <property name="graphicContext" ref="wireframeShader" />
        <property name="content" ref="elemContent" />
    </bean>

    <bean id="elemContent" class="net.wohlfart.tools.CollectionMergerFactory">
        <constructor-arg>
            <list>
                <bean class="net.wohlfart.basic.states.SceneCreator" factory-method="createCircledTarget" />
                <bean class="net.wohlfart.basic.states.SceneCreator" factory-method="createRandomElements" />
                <bean class="net.wohlfart.basic.states.SceneCreator" factory-method="createOriginAxis" />
                <bean class="net.wohlfart.basic.states.SceneCreator" factory-method="createDebugElements" />
            </list>
        </constructor-arg>
    </bean>

</beans>
