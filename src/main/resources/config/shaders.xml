<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<bean id="defaultShader" class="net.wohlfart.gl.shader.DefaultGraphicContext">
		<constructor-arg index="0">
			<bean class="net.wohlfart.gl.shader.DefaultShaderProgram">
				<constructor-arg index="0" value="/shaders/default/vertex.glsl" />
				<constructor-arg index="1" value="/shaders/default/fragment.glsl" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="hudShader" class="net.wohlfart.gl.shader.DefaultGraphicContext">
		<constructor-arg index="0">
			<bean class="net.wohlfart.gl.shader.DefaultShaderProgram">
				<constructor-arg index="0" value="/shaders/hud/vertex.glsl" />
				<constructor-arg index="1" value="/shaders/hud/fragment.glsl" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="lightingShader" class="net.wohlfart.gl.shader.DefaultGraphicContext">
		<constructor-arg index="0">
			<bean class="net.wohlfart.gl.shader.DefaultShaderProgram">
				<constructor-arg index="0" value="/shaders/lighting/vertex.glsl" />
				<constructor-arg index="1" value="/shaders/lighting/fragment.glsl" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="wireframeShader" class="net.wohlfart.gl.shader.DefaultGraphicContext">
		<constructor-arg index="0">
			<bean class="net.wohlfart.gl.shader.DefaultShaderProgram">
				<constructor-arg index="0" value="/shaders/wireframe/vertex.glsl" />
				<constructor-arg index="1" value="/shaders/wireframe/fragment.glsl" />
			</bean>
		</constructor-arg>
	</bean>

</beans>
